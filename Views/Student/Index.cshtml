@model PhoneWebApp.Models.StudentViewModel


@if (Model.AccessLevel <= 0 || Model.AccessLevel > 10)
{
    <p>Invalid access level.</p>
}
@if (Model.AccessLevel >= 1 && Model.AccessLevel < 2)
{
    <p>You do not have a sufficient access level to view this data.</p>
}
@if (Model.AccessLevel > 2 && Model.AccessLevel < 8)
{
    <h4>Student Information</h4>
    @foreach (var student in Model.Students)
    {
        <p>First Name: @student.firstName | Last Name: @student.lastName</p>
    }   
}
@if (Model.AccessLevel >= 8 && Model.AccessLevel <= 10)
{
    <h1>Hello Admin</h1>
    <h4>Student Information</h4>
    @foreach (var student in Model.Students)
    {
        <p>First Name: @student.firstName | Last Name: @student.lastName | Grade: @student.grade</p>
    }
}
